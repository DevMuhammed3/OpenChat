generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int       @id @default(autoincrement())
  publicNumericId String?   @unique
  name            String?
  username        String    @unique
  email           String    @unique
  emailVerified  Boolean  @default(false)
  avatar          String?
  password        String
  role            String    @default("USER")
  bio             String?   @db.Text
  phone           String?   @unique
  status          Boolean   @default(false)
  isActive        Boolean   @default(true)

  // Security
  lastLogin        DateTime?
  loginAttempts    Int       @default(0)
  lockedUntil      DateTime?
  twoFactorEnabled Boolean   @default(false)
  twoFactorSecret  String?

  // OAuth
  googleId   String? @unique
  githubId   String? @unique
  discordId  String? @unique
  facebookId String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Friend Requests
  sentRequests     FriendRequest[] @relation("sentRequests")
  receivedRequests FriendRequest[] @relation("receivedRequests")

  // Friends
  friends1 Friend[] @relation("friends1")
  friends2 Friend[] @relation("friends2")

  // Messages
  sentMessages Message[] @relation("UserSentMessages")

  // chat 
  chatParticipants ChatParticipant[]
}

model EmailOTP {
  id        String   @id @default(uuid())
  email     String
  code      String
  expiresAt DateTime
  createdAt DateTime @default(now())
}

model FriendRequest {
  id         Int      @id @default(autoincrement())
  senderId   Int
  receiverId Int
  createdAt  DateTime @default(now())

  sender   User @relation("sentRequests", fields: [senderId], references: [id])
  receiver User @relation("receivedRequests", fields: [receiverId], references: [id])
}

model Friend {
  id        Int      @id @default(autoincrement())
  user1Id   Int
  user2Id   Int
  createdAt DateTime @default(now())

  user1 User @relation("friends1", fields: [user1Id], references: [id])
  user2 User @relation("friends2", fields: [user2Id], references: [id])

  @@unique([user1Id, user2Id])
}

model Message {
  id        Int      @id @default(autoincrement())
  chatId    Int
  senderId  Int
  text      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  chat Chat @relation(fields: [chatId], references: [id])

  sender User @relation("UserSentMessages", fields: [senderId], references: [id])
}

model Chat {
  id        Int      @id @default(autoincrement())
  publicId  String   @unique
  createdAt DateTime @default(now())

  participants ChatParticipant[]
  messages     Message[]
}

model ChatParticipant {
  id     Int @id @default(autoincrement())
  chatId Int
  userId Int

  chat Chat @relation(fields: [chatId], references: [id])
  user User @relation(fields: [userId], references: [id])

  @@unique([chatId, userId])
}
